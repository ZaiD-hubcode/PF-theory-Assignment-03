#include <stdio.h>

float computeTotalPayment(float principal, float interestRate, float yearlyPayment, int duration, int currentYear)
{
    if (principal <= 0 || duration == 0) {
        printf("Loan fully repaid or no years left.\n");
        return 0;
    }

    principal = principal + (principal * interestRate / 100.0);
    float balance = principal - yearlyPayment;
    if (balance < 0) balance = 0;

    printf("Year %d: Remaining loan = %.2f\n", currentYear, balance);

    return yearlyPayment + computeTotalPayment(balance, interestRate, yearlyPayment, duration - 1, currentYear + 1);
}

int main()
{
    float initialLoan, annualRate, annualInstallment;
    int loanTerm;

    printf("Enter loan amount: ");
    scanf("%f", &initialLoan);

    printf("Enter yearly interest rate: ");
    scanf("%f", &annualRate);

    printf("Enter number of years: ");
    scanf("%d", &loanTerm);

    printf("Enter yearly installment: ");
    scanf("%f", &annualInstallment);

    float totalPaid = computeTotalPayment(initialLoan, annualRate, annualInstallment, loanTerm, 1);

    printf("Total repayment = %.2f\n", totalPaid);

    return 0;
}
